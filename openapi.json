                      "type": "object",
                      "properties": {
                        "x-monite-version": {
                          "type": "string",
                          "format": "date"
                        }
                      }
                    },
                    "path": {
                      "type": "object",
                      "properties": {
                        "approval_policy_id": {
                          "type": "string",
                          "format": "uuid"
                        }
                      }
                    },
                    "query": {
                      "type": "object",
                      "properties": {
                        "items_order": {
                          "type": "array",
                          "items": { "$ref": "#/components/schemas/OrderEnum" },
