{
  "name": "qraft",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "yarn workspaces foreach --verbose --recursive --no-private --from '@radist2s/*' run build",
    "dev": "yarn workspaces foreach --verbose --recursive --no-private --from '@radist2s/*' run dev",
    "test": "yarn workspaces foreach --verbose --recursive --no-private --from '@radist2s/*' run test",
    "lint": "yarn workspaces foreach --verbose --recursive run lint",
    "generate": "openapi-typescript ./openapi.json -o openapi.d.ts"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "openapi-typescript": "^6.7.3",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3"
  },
  "workspaces": [
    "packages/*",
    "playground"
  ],
  "packageManager": "yarn@4.0.2"
}
