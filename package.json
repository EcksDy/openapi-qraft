{
  "name": "qraft",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "yarn workspaces foreach --verbose --recursive --no-private --from '@openapi-qraft/*' run build",
    "dev": "yarn workspaces foreach --verbose --recursive --no-private --from '@openapi-qraft/*' run dev",
    "test": "yarn workspaces foreach --verbose --recursive --no-private --from '@openapi-qraft/*' run test",
    "lint": "yarn workspaces foreach --verbose --recursive run lint"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3"
  },
  "workspaces": [
    "packages/*",
    "playground",
    "e2e"
  ],
  "packageManager": "yarn@4.0.2"
}
