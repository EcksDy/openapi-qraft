{
  "name": "qraft",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "yarn workspaces foreach --verbose --recursive --topological --from '@openapi-qraft/*' run build",
    "dev": "yarn workspaces foreach --verbose --recursive --parallel --no-private --from '@openapi-qraft/*' run dev",
    "test": "yarn workspaces foreach --verbose --recursive --topological --no-private --from '@openapi-qraft/*' run test",
    "lint": "yarn workspaces foreach --verbose --recursive --topological --from '@openapi-qraft/*' run lint",
    "typecheck": "yarn workspaces foreach --verbose --recursive --topological --from '@openapi-qraft/*' run typecheck"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3"
  },
  "workspaces": [
    "packages/*",
    "playground",
    "e2e",
    "website"
  ],
  "packageManager": "yarn@4.0.2"
}
