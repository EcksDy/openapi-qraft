{
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": "src",
    "target": "ESNext",
    "module": "ES6",
    "lib": ["ES2019"],
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": ["src/**/*"]
}
